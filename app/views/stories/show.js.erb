//cache objects we may reuse
var story_details = $("#story_details");
var story_content = story_details.find("#content");

//fade out current content and replace it with new content
story_content.fadeOut(300, function() {
  $(this).html("<%= escape_javascript(render(:partial => 'show', :locals => {:story => @story, :group => @group} )) %>");
});

//fade in content after replacement has completed
story_content.fadeIn(200);


