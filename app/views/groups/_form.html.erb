  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <% if current_user.admin or current_user.is_group_leader? %>
  	<p>
	  Group Leader: <%= f.select(:creator, @group.users.collect {|u| [u.name, u.id]}, :prompt => 'Select') %>
	</p>
	<p>
	  Deputies: <%= f.select(:deputy_1, @group.users.collect {|u| [u.name, u.id]}, :include_blank => 'None') %> <%= f.select(:deputy_2, @group.users.collect {|u| [u.name, u.id]}, :include_blank => 'None') %>
	</p>
  <% end %>