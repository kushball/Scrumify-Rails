<%= form_for @role do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 3 %>
  </p>
  <p>
  	<%= f.label :user_id, "Assign to User" %>
	<%= f.collection_select(:user_id, @users, :id, :name) %>
  </p>
  <p>
    <%# f.label :icon %><br />
    <%# f.file_field :icon %>
  </p>
  <p><%= f.submit :class => "orange_button" %></p>
<% end %>
