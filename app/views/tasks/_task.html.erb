<li id="task_<%= task.id %>">
	<span class="title"><%= task.name %></span>
	<span class="status"><%= task.state.name unless task.state.blank? %></span>
	<span class="points"><%= task.points %></span>
	<%= link_to "Show", task, :remote => true %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Destroy", task, :confirm => 'Are you sure?', :method => :delete %>
</li>